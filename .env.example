# FHEVM 2048 Game Environment Configuration
# Copy this file to .env and fill in your actual values

# ==============================================
# NETWORK CONFIGURATION
# ==============================================

# Sepolia Testnet RPC URL (get from Alchemy, Infura, or public RPC)
REACT_APP_SEPOLIA_RPC_URL=https://rpc.sepolia.org

# Chain ID for Sepolia testnet
REACT_APP_CHAIN_ID=11155111

# ==============================================
# CONTRACT ADDRESSES
# ==============================================

# Main FHEVM game contract address (deploy first, then update this)
REACT_APP_FHEVM_CONTRACT_ADDRESS=0x...

# Game NFT contract address
REACT_APP_GAME_NFT_ADDRESS=0x...

# Game token contract address  
REACT_APP_GAME_TOKEN_ADDRESS=0x...

# Marketplace contract address
REACT_APP_MARKETPLACE_ADDRESS=0x...

# ==============================================
# ZAMA FHEVM CONFIGURATION
# ==============================================

# Zama relayer URL for FHE operations
REACT_APP_RELAYER_URL=https://relayer.testnet.zama.cloud

# Decryption service address
REACT_APP_DECRYPTION_ADDRESS=0xb6E160B1ff80D67Bfe90A85eE06Ce0A2613607D1

# ==============================================
# API CONFIGURATION
# ==============================================

# Backend API URL
REACT_APP_BACKEND_API_URL=http://localhost:4009/api

# Etherscan API key for contract verification
REACT_APP_ETHERSCAN_API_KEY=your_etherscan_api_key

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================

# Environment (development, staging, production)
NODE_ENV=development

# Server port
PORT=4009

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:3000

# ==============================================
# BLOCKCHAIN DEPLOYMENT
# ==============================================

# Private key for deployment and oracle operations
# WARNING: Never use real private keys in development!
# Use a dedicated testnet wallet with minimal funds
ORACLE_PRIVATE_KEY=your_deployment_private_key

# ==============================================
# OPTIONAL CONFIGURATION
# ==============================================

# Enable gas reporting during tests
REPORT_GAS=false

# Enable verbose logging
DEBUG=false

# Rate limiting (requests per minute)
RATE_LIMIT=100

# ==============================================
# SECURITY NOTES
# ==============================================
# 
# 1. Never commit actual private keys to version control
# 2. Use environment-specific .env files (.env.local, .env.production)
# 3. Rotate API keys regularly
# 4. Use minimal permissions for service accounts
# 5. Monitor for unusual activity on deployed contracts
# 
# ==============================================
# GETTING STARTED
# ==============================================
#
# 1. Get Sepolia ETH from a faucet: https://sepoliafaucet.com
# 2. Deploy contracts: npm run deploy:sepolia
# 3. Update contract addresses above
# 4. Start development: npm run dev
# 5. Verify contracts: npm run verify:sepolia
#
# ==============================================